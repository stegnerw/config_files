# i3blocks configuration
# https://github.com/vivien/i3blocks
#
# Block scripts live in ~/.config/i3blocks/scripts/
# Click any block to get full details via dunst notification.
# Signal a block to force refresh: pkill -RTMIN+<signal> i3blocks

# [global]
separator=true
separator_block_width=15
markup=pango
command=$HOME/.config/i3blocks/scripts/$BLOCK_NAME

[updates]
interval=300

[volume]
# Left click: mixer | Right click: mute | Scroll: volume
interval=1
signal=1

[notif]
# Left click: toggle notifications
interval=1
signal=2

[network]
# Left click: show full connection details
interval=10
signal=3

[bat]
# Left click: show detailed battery info
# Outputs nothing on desktops (no separator rendered)
interval=30
signal=4

[load]
# Left click: show 1m/5m/15m averages
interval=5
signal=5

[temp]
# Left click: show per-sensor breakdown
interval=5
signal=6

[ram]
# Left click: show used/total
interval=5
signal=7

[disk]
# Left click: show used/total
instance=/
interval=60
signal=8

[datetime]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1
